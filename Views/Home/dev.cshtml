<script src="~/lib/jquery/dist/jquery.min.js"></script>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
<title>Admin Portal</title>
<link rel="stylesheet" href="~/adminassets/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" href="~/adminassets/fonts/fontawesome-all.min.css">
<link rel="stylesheet" href="~/adminassets/fonts/font-awesome.min.css">
<link rel="stylesheet" href="~/adminassets/css/styles.css">
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link href="https://fonts.googleapis.com/css?family=Ubuntu+Mono" rel="stylesheet">
<link href="~/css/Animate.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<html xmlns="http://www.w3.org/1999/xhtml">

<body style="font-family: 'Ubuntu Mono', monospace; color: white; background-color: black;">

    <p class="awesome" style="font-size:50px; text-align: center;">developer &#129324; tools</p>

    <script type='text/javascript'>

        function forcefeed()
        {

            var amount = document.getElementById('amount').value

            $.ajax({
                url: '@Url.Action("forcefeed", "Home")',
                data: { amount }
            });
        }

        function updateProgress()
        {
            $.ajax({
                url: '@Url.Action("updatefeed", "Home")',
                success: function (data) {
                    $('#partialview_progress').html(data);
                }
            });
        }

        function populatecred()
        {
            $.ajax({
                url: '@Url.Action("populatecred", "Home")'
            });
        }

        function populateset()
        {
            $.ajax({
                url: '@Url.Action("populateset", "Home")'
            });
        }

        window.setInterval(function () {
            updateProgress();
        }, 200);

    </script>

    <div class="row" style="text-align: center; margin: 5%;">

        <div class="col" style="float: none; border: solid 1px; padding: 10px;">

            <h3 style="margin-bottom: 10vh; font-weight: bold;">Database Stress Test</h3>

            <div class="form-group" style="width: 35vw;">

                <label for="amount"># of entries</label>
                <input type="number" id="amount" class="form-control" />

                <div class="row">

                    <div class="col">
                        <div id="partialview_progress">
                            <!-- Partialview contents -->
                        </div>
                    </div>


                    <div class="col">
                        <button class="btn btn-primary" onclick="forcefeed()" style="margin-top: 5vh;">GO!</button>
                    </div>

                </div>

            </div>
        </div>

        <div class="col" style="float: none; border: solid 1px; padding: 10px;">

            <h3 style="margin-bottom: 10vh; font-weight: bold;">Quick Tools</h3>

            <div style="margin-right: 10%; text-align: right;">
                <span style="font-size: 15pt;">Add credential ("admin@admin" and "password"):&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span><button onclick="populatecred()" class="btn btn-primary">Inject</button>
                <br />

                <div style="margin-top: 5vh;">
                    <span style="font-size: 15pt;">Populate database with sample set:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span><button onclick="populateset()" class="btn btn-primary">Inject</button>
                </div>

            </div>

        </div>


    </div>

</body>
</html>


